//- extends layout

block content
  h1= title
  - let costumes = [{costume_type:"Gamer Costumes", costume_name:"8-Ball", units: 15},{costume_type:"Superhero Costumes", costume_name:"Superman", units: 10},{costume_type:"Disney Costumes", costume_name:"Minnie Mouse", units: 5}]
  div(class="container-fluid") 
  div(class="row")
    each costume,index in costumes
        div(class="col-sm-2" onclick=`buy(${index})`) costume_type: #{costume.costume_type} , costume_name: #{costume.costume_name} , units: #{costume.units} 

  script. 
   let itemNo=0
      function buy(itemNo)
      {
          alert(`You purchased Item ${itemNo+1}`)
      }